{

    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++ Current target",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "symbolSearchPath": "${command:cmake.launchTargetDirectory}",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH};D:/Qt/5.15.2/5.15.2-share/bin"
                }
            ],
            "visualizerFile": "${workspaceRoot}/.vscode/qt.natvis.xml"
        }
    ]
}